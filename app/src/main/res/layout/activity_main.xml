<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:layout_marginBottom="51dp"
        android:fontFamily="sans-serif"
        android:text="AplicaciÃ³n de los buenos modales"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_gracias"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_gracias"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/grey"
        android:fontFamily="sans-serif"
        android:text="Gracias"
        android:textColor="@color/black"

        android:textFontWeight="700"
        app:layout_constraintBottom_toTopOf="@+id/btn_estornudar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_estornudar"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="328dp"
        android:backgroundTint="@color/grey"
        android:fontFamily="sans-serif"
        android:text="Estornudar"
        android:textColor="@color/black"
        android:textFontWeight="700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_gracias" />


</androidx.constraintlayout.widget.ConstraintLayout>